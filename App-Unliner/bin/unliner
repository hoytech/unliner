#!/usr/bin/env perl

use common::sense;

use App::Unliner::Program;


my $filename = shift @ARGV;

if (!defined $filename || $filename eq '-') {
  $filename = \*STDIN;
}


App::Unliner::Program->new
                     ->compile_file($filename)
                     ->run( def_name => 'main', argv => \@ARGV, );
